# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Translation Configuration
DEFAULT_SOURCE_LANGUAGE=zh-CN
DEFAULT_TARGET_LANGUAGE=en

# API Priority (comma-separated, options: google,libre,lingva)
# This determines which free translation APIs to try first
API_PRIORITY=google,libre,lingva

# API Timeout in milliseconds
API_TIMEOUT=5000

# Bot Configuration
AUTO_TRANSLATE=true

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL=86400000  # 24 hours in milliseconds
